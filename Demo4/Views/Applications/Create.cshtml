@model Demo4.Data.Application

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input type="date" asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumEquipmet" class="control-label"></label>
                <input asp-for="NumEquipmet" class="form-control" />
                <span asp-validation-for="NumEquipmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeWork" class="control-label"></label>
                <input type="number" asp-for="TimeWork" class="form-control" />
                <span asp-validation-for="TimeWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeProblemId" class="control-label"></label>
                <select asp-for="TypeProblemId" class="form-control" asp-items=@ViewBag.Problems />
                <span asp-validation-for="TypeProblemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeEquipmentId" class="control-label"></label>
                <select asp-for="TypeEquipmentId" class="form-control" asp-items=@ViewBag.Equipments />
                <span asp-validation-for="TypeEquipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">рабочий</label>
                <select asp-for="Clientname" class="form-control" asp-items=@ViewBag.Users/>
                <span asp-validation-for="Clientname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
